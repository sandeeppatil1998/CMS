    <!-- Navbar -->

   <%- include('../../partials/navbar'); -%>
   
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Ovreall Appointments List</h6>
                <!-- <input style="position: absolute; top: 30%; right: 22%;" type="text"/></input> -->
                
                <!-- <span class="badge badge-sm bg-gradient-success" style="position: absolute; top: 34%; right: 7%;">Add Patient</span> -->
              </div>
            </div>
            <div class="card-body px-2 pb-2">
              <div class="table-responsive p-0">
                
                <div class="form-group d-flex float-end" style="margin: 10px 10px; gap: 10px;">
                  <a href="/p_previousappointment/<%= patientid %>"><button type="button" class="btn" style="color: white; background-image: linear-gradient(195deg, #78052c 0%, #D81B60 100%) !important;" >
                    Previous Appointment
                   </button></a>
                  <a href="/p_bookappointment/<%= patientid %>"><button type="button" class="btn" style="color: white; background-image: linear-gradient(195deg, #78052c 0%, #D81B60 100%) !important;" >
                       Book Appointment
                   </button></a>
                </div>
                <table class="table align-items-center datanew mb-0">
                  
                    <thead>
                        <tr>
                        <th>Appointment Id</th>
                        <th>Patient ID</th>
                        <th>Patient Name</th>
                        <th>Doctor Name</th>
                        <th>Appointment Date</th>
                        <th>Note</th>
                        <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>  
                        <%for(var i=0;i<allpatients.length;i++){%>
                            <tr>
                                <td><%=allpatients[i].id%></td>
                                <td><%=allpatients[i].patient_id%></td>
                                <td><%=allpatients[i].patient_name%></td>
                                <td><%=allpatients[i].doctor_name%></td>
                                <td><%= (allpatients[i].appointment_date).toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" }); %></td>
                                <td><%=allpatients[i].note%></td>
                                <td><%=allpatients[i].status%></td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </main>
