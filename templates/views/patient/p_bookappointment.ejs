            <div class="card-body px-0 pb-2" style="min-height: 50vh;">
              <div class="table-responsive p-0">
                <form action="/p_bookappointment" method="post">
                    <div style="margin-top: 4%;">
                      <div style="display: flex; justify-content: space-around;">
                        <input type="hidden" name="patient_id" value="<%= patientId %>">
                        <input type="hidden" name="doctor_id" value="<%= doctors[0].id %>"> 
                        
                        


                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="date">Choose a date:</label>
                                    <input type="date" id="date" name="appointment_date">
                            </div>
                        </div>
                        
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="dropdown1">Choose Slots:</label>
                                <select id="dropdown1" name="appointment_time" >
                                    <% for(var i=0; i<timeslots.length; i++) { %>
                                        <option value="<%= timeslots[i].id %>"><%= timeslots[i].time %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group">
                                <label for="note">Note :</label>
                                <input type="text" id="note" name="note" requiredminlength="4"  size="40">
                            </div>
                        </div>
                    </div>
                        <div class="col-lg-3 col-sm-6 col-12">
                            <div class="form-group" style="margin-top: 33px; margin-left: 180%;">
                               <button class="btn btn-primary" type="submit" >Book</button>
                            </div> 
                        </div>
                        

                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div> 
