   <%- include('../../partials/navbar'); -%>
   
   <div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card my-4">
          <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
              <h6 class="text-white text-capitalize ps-3">Edit Patient Details</h6>
            </div>
          </div>
          <div class="card-body px-0 pb-2" style="min-height: 50vh;">
            <div class="table-responsive p-0">
              <form action="/p_editprofilepage" method="post">
                <div style="margin-top: 4%;">
                  <div style="display: flex; justify-content: space-between; margin-left: 4%;">
                    

                    <div style="background-color: red; margin-left: 20px; border-radius: 50%; background-image: url('../image/<%=allpatients[0].image%>'); background-size: cover; background-position: center; width: 100px; height: 100px;"></div>

                        <div >
                      <label for="patientid" style="padding-left: 13px;" >Patient Id :</label>
                      <input type="text" id="patientid" style="border-color: rgb(255, 255, 255); font-weight: bolder;" name="patient_id" value="<%= allpatients[0].id %>"  readonly>
                    </div>
                  </div>
                  <div class="row mt-4" style="padding: 20px; margin-left: 3%;">
                    <div class="col-lg-3  col-sm-12">
                      <div class="form-group">
                        <label for="name">Name :</label>
                        <input type="text" id="name" name="name" value="<%= allpatients[0].name %>">
                      </div>
                    </div>
                    <div class="col-lg-3  col-sm-12">
                      <div class="form-group">
                        <label for="email">Email :</label>
                        <input readonly type="text" id="email" name="email" value="<%= allpatients[0].email %>">
                      </div>
                    </div>
                    <div class="col-lg-3  col-sm-12" >
                      <div class="form-group">
                        <label for="gender">Gender :</label>
                        <select class="form-control" name="gender" id="gender">
                          <option value="<%= allpatients[0].gender %>"><%= allpatients[0].gender %></option>
                          <% if ( allpatients[0].gender  == 'male'){%>
                            <option value="female">Female</option>
                          <% }else { %>
                            <option value="male">Male</option>
                          <% } %>
                        </select>
                        <!-- <input type="text" id="gender" name="gender" value="<%= allpatients[0].gender %>"> -->
                      </div>
                    </div>
                    <div class="col-lg-3  col-sm-12">
                    </div>
                    <div class="col-lg-3  col-sm-12">
                      <div class="form-group">
                        <label for="age">Age :</label>
                        <input type="text" id="age" name="age" value="<%= allpatients[0].age %>">
                      </div>
                    </div>
                    
                    <div class="col-lg-3  col-sm-12">
                      <div class="form-group">
                        <label for="mobile">Mobile :</label>
                        <input type="text" id="mobile" name="mobile" value="<%= allpatients[0].mobile %>">
                      </div>
                    </div>
                    <div class="col-lg-3  col-sm-12">
                      <div class="form-group">
                        <label for="address">Address :</label>
                        <input type="text" id="address" name="address" value="<%= allpatients[0].address %>">
                      </div>
                    </div>
                    <div class="col-12 text-end mt-4">
                      <a href=""><button class="btn btn-primary" type="Submit" >Back</button></a>
                      <button class="btn btn-primary" type="Submit" >Submit</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
