<script>

    function addissue(){
        var issueadd = document.getElementsByName("issueadd")[0].value;
        var issue = document.getElementsByName("issue")[0].value;
        document.getElementsByName("issue")[0].value = issue + issueadd + ",\n";
        document.getElementsByName("issueadd")[0].value = "";
    }

    document.addEventListener("DOMContentLoaded", () => {
        const today = new Date();
        const year = today.getFullYear();
        const month = (today.getMonth() + 1).toString().padStart(2, "0");
        const day = today.getDate().toString().padStart(2, "0");
        const formattedDate = `${year}-${month}-${day}`;
        document.getElementById("date").value = formattedDate;
    });


    const medicine = document.getElementById("medicine");
    const medicine_list = document.getElementById("medicine_list");
    medicine.addEventListener("change", function() {
        medicine_list.value += medicine.value + ",\n";
    });

    const patient_id = document.getElementById("patient_id");
    const patient_name = document.getElementById("patient_name");
    const patient_idlabel = document.querySelector(".patient_idlabel");
    const patient_namelabel = document.querySelector(".patient_namelabel");

    patient_id.addEventListener("focus", function() {
        patient_idlabel.style.transform = "translateY(-20px)";
    });

    patient_id.addEventListener("blur", function() {
        if (patient_id.value == "") {
            patient_idlabel.style.transform = "translateY(0px)";
        }
    });

    patient_name.addEventListener("focus", function() {
        patient_namelabel.style.transform = "translateY(-20px)";
    });

    patient_name.addEventListener("blur", function() {
        if (patient_name.value == "") {
            patient_namelabel.style.transform = "translateY(0px)";
        }
    });

</script>

