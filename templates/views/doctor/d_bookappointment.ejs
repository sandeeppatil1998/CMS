   <%- include('../../partials/navbar'); -%>
   
   <div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card my-4">
          <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
              <h6 class="text-white text-capitalize ps-3">All Patients</h6>
            </div>
          </div>
          <div class="card-body px-0 pb-2" style="min-height: 50vh;">
            <div class="table-responsive p-0">
              <form action="/d_bookappointment" method="post">
                <div style="margin-top: 4%;">
                  <div class="row" style="">
                    <div class="col-md-6 col-sm-6 col-12">
                      <div class="form-group">
                        <label for="date">Choose a date:</label>
                        <input type="date" id="date" name="appointment_date" class="form-control">
                      </div>
                    </div>
  
                    <div class="col-md-6 col-sm-6 col-12">
                      <div class="form-group">
                        <label for="dropdown1">Choose Slots:</label>
                        <select id="dropdown1" name="appointment_time" class="form-control">
                          <option value="" disabled selected>Select a slot</option>
                          <% for(var i=0; i<timeslots.length; i++) { %>
                          <option value="<%= timeslots[i].id %>"><%= timeslots[i].time %></option>
                          <% } %>
                        </select>
                      </div>
                    </div>
                  </div>
  
                  <div class="row">
                    <div class="col-12">
                      <div class="form-group">
                        <label for="note">Note :</label>
                        <textarea id="note" name="note" class="form-control" required minlength="4" size="40"></textarea>
                      </div>
                    </div>
                  </div>
  
                  <div class="row">
                    <div class="col-12">
                      <div class="form-group text-center">
                        <button class="btn btn-primary" type="submit">Book</button>
                      </div>
                    </div>
                  </div>
  
                </div>
              </form>
              <div class="text-center">
                <button class="btn btn-primary "
                    style="font-size: large;" onclick="history.back()">Back</button>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  
